{
    "model_name": "allenai/bhaskara",
    "model_type": "causal",
    "max_source_tokens_count": 320,
    "max_target_tokens_count": 96,
    "batch_size": 3,
    "gradient_accumulation_steps": 3,
    "logging_steps": 10,
    "eval_steps": 50,
    "save_steps": 50,
    "warmup_steps": 50,
    "num_train_epochs": 4,
    "learning_rate": 0.0004,
    "is_one_based": true,
    "use_color_strings": true,
    "input_template": "instructions: {} commands: ",
    "deepspeed": {
        "fp16": {
            "enabled": true,
            "min_loss_scale": 1,
            "opt_level": "O3"
        },
        "zero_optimization": {
            "stage": 3,
            "offload_param": {
                "device": "cpu",
                "pin_memory": true
            },
            "offload_optimizer": {
                "device": "cpu",
                "pin_memory": true
            },
            "contiguous_gradients": true,
            "stage3_gather_fp16_weights_on_model_save": true
        }
    }
}
